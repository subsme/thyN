<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thyn" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.thyn.backend.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.thyn.backend.permission.C2D_MESSAGE" />



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Holo" >
        <activity android:name=".tasklist.TaskListActivity" />
        <activity android:name=".tab.MyTaskListActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".form.view.TaskPagerViewOnlyActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.thyn.tab.MyTaskListActivity" />
        </activity>
        <activity
            android:name=".form.view.my.MyTaskPagerViewOnlyActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.thyn.tasklist.my.completed.MyCompletedTaskListActivity" />
        </activity>
        <activity
            android:name=".tasklist.my.completed.MyCompletedTaskListActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".form.TaskActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.thyn.tasklist.TaskListActivity" />
        </activity>
        <activity
            android:name=".field.AddressActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.thyn.form.TaskActivity" />
        </activity>
        <activity
            android:name=".user.SignupActivity"
            android:label="@string/title_activity_signup"
            android:theme="@style/AppTheme.Bluey"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".user.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.Bluey"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".broadcast.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/TransparentCompat"
            android:screenOrientation="portrait">
        </activity>
        <!-- [START gcm_receiver] -->
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.thyn.broadcast" />
                <!-- for pre kit-kat devices; Source - https://developers.google.com/cloud-messaging/android/client#manifest-->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
            </intent-filter>
        </receiver>
        <!-- [END gcm_receiver] -->

        <!-- [START gcm_listener] -->
        <service
            android:name=".broadcast.MyGcmListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <!-- [END gcm_listener] -->
        <!-- [START instanceId_listener] -->
        <service
            android:name=".broadcast.MyInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID"/>
            </intent-filter>
        </service>
        <!-- [END instanceId_listener] -->
        <service
            android:name=".broadcast.GcmRegistrationIntentService"
            android:exported="false">
        </service>
    </application>

</manifest>