<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thyn">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Holo">
        <activity android:name="com.thyn.tasklist.TaskListActivity"></activity>
        <activity android:name="com.thyn.tab.MyTaskListActivity"></activity>
        <activity
            android:name="com.thyn.form.view.TaskPagerViewOnlyActivity"
            android:label="@string/app_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.thyn.tab.MyTaskListActivity" />
        </activity>
        <activity
            android:name="com.thyn.form.view.my.MyTaskPagerViewOnlyActivity"
            android:label="@string/app_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.thyn.tasklist.my.completed.MyCompletedTaskListActivity" />
        </activity>
        <activity
            android:name="com.thyn.tasklist.my.completed.MyCompletedTaskListActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.thyn.form.TaskActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.thyn.tasklist.TaskListActivity" />
        </activity>
        <activity
            android:name="com.thyn.field.AddressActivity"
            android:label="@string/app_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.thyn.form.TaskActivity" />
        </activity>
        <activity
            android:name="com.thyn.user.SignupActivity"
            android:label="@string/title_activity_signup"
            android:theme="@style/AppTheme.Bluey">
        </activity>
        <activity
            android:name="com.thyn.user.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.Bluey">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
