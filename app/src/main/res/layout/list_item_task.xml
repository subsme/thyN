<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/task_list_item_Is_Accepted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Accepted"
        android:textColor="#C5CAE9"
        android:layout_alignParentRight="true"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" />
    <TextView
        android:id="@+id/task_list_item_User"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/task_list_item_Is_Accepted"
        android:textColor="#000000"
        android:textSize="20dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" />
    <TextView
        android:id="@+id/task_list_item_titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task Description"
        android:textColor="#000000"
        android:layout_below="@id/task_list_item_User"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" />
    <TextView
        android:id="@+id/task_list_item_locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#263238"
        android:layout_below="@id/task_list_item_titleTextView"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"/>
    <TextView
        android:id="@+id/task_list_item_createDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#263238"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_below="@id/task_list_item_locationTextView"
        android:paddingTop="4dp" />
    <TextView
        android:id="@+id/task_list_item_serviceDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="#263238"
        android:layout_below="@id/task_list_item_createDateTextView"
        android:paddingTop="4dp" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/task_list_item_solvedCheckBox"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:enabled="false"
        android:focusable="false"
        android:padding="4dp" />
</RelativeLayout>