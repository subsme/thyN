<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/autocomplete_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawableLeft="@mipmap/ic_search_black_18dp"
        android:drawablePadding="10dp"
        android:hint="Enter Location"
        android:textColorHint="@color/greyseparator"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/write_text"
        android:singleLine="true"
        />
    <ImageView
        android:id="@+id/clearText"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_clear_black_18dp"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/autocomplete_tv"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical"/>

</RelativeLayout>
